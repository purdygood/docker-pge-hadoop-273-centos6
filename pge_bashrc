alias diff='colordiff '
alias ls='ls --color=tty '
alias l='ls -F '
alias ll='ls -lhF '
alias lll='ls -lrthF '
alias la='ls -ahF '
alias lla='ls -alhF '
alias llla='ls -alrthF '
alias l.='ls -dF .* '
alias ll.='ls -dlhF .* '
alias lll.='ls -dlrthF .* '
alias inet='ifconfig | grep "inet "'

